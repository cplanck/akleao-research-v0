# =============================================================================
# Akleao Research - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values.
# IMPORTANT: Never commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Cloud SQL PostgreSQL)
# -----------------------------------------------------------------------------
# Connection to Cloud SQL via Cloud SQL Proxy (running on localhost:5432)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=akleao
DB_USER=akleao_user
DB_PASSWORD=your-secure-password-here

# Alternative: Direct connection string (if not using Cloud SQL Proxy)
# DATABASE_URL=postgresql://user:password@host:5432/akleao

# -----------------------------------------------------------------------------
# Storage (Google Cloud Storage)
# -----------------------------------------------------------------------------
GCS_BUCKET=akleao-research-uploads

# -----------------------------------------------------------------------------
# Redis (for Celery)
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Frontend URLs (for CORS)
# -----------------------------------------------------------------------------
# Primary frontend URL (Vercel production)
FRONTEND_URL=https://akleao.com

# Additional CORS origins (comma-separated)
# Include your custom domain and Vercel preview URLs
CORS_ORIGINS=https://akleao.com,https://www.akleao.com

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a new secret for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=generate-a-new-secret-for-production

# -----------------------------------------------------------------------------
# OpenAI API (Embeddings)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-...

# -----------------------------------------------------------------------------
# Anthropic API (Claude LLM)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-...

# -----------------------------------------------------------------------------
# Pinecone (Vector Database)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=...
PINECONE_INDEX_NAME=akleao-research

# -----------------------------------------------------------------------------
# Tavily API (Web Search)
# -----------------------------------------------------------------------------
TAVILY_API_KEY=tvly-...

# -----------------------------------------------------------------------------
# Mailgun (Email)
# -----------------------------------------------------------------------------
MAILGUN_API_KEY=...
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
APP_NAME=Akleao
