# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# API Keys (required)
# =============================================================================
OPENAI_API_KEY=sk-proj-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here
PINECONE_API_KEY=pcsk_your-pinecone-key-here
PINECONE_INDEX_NAME=akleao-research
TAVILY_API_KEY=tvly-your-tavily-key-here

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
# Local dev defaults (matches docker-compose.yml) - usually don't need to set these
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=akleao
# DB_USER=akleao
# DB_PASSWORD=akleao_dev

# Or use a direct connection string:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET=your-secret-key-change-in-production

# Magic link emails (optional for local dev)
# MAILGUN_API_KEY=your-mailgun-key
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# Frontend URL (for CORS)
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Production Only (ignore for local dev)
# =============================================================================
# GCS_BUCKET=your-gcs-bucket-name
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
